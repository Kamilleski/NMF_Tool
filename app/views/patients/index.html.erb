<br />
<% if @patients.blank? %>
  <h4>There are no patients whose name contains "<%= params[:search] %>"</h4>
<% else %>
  <div class="row">
    <div class="col-xs-10 col-centered">
      <div class="panel panel-default">
        <div class="panel-heading"><h1>All Patients</h1></div>
        <table class="table table-striped table-hover">
          <tr>
            <th>ID</th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Start Visit</th>
          </tr>
          <% @patients.each do |p| %>
            <tr>
              <td><%= link_to p.id, patient_path(p) %></td>
              <td><%= p.last_name %></td>
              <td><%= p.first_name %></td>
              <td><%= link_to "New visit", new_visit_path %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
<% end %>
