<% @visits = Visit.where(patient_id: @patient.id) %>

<div class="row">
  <div class="col-sm">
    <%= render "patients/patient_info_header" %>
  </div>
</div>
<br />
<div class="row">
  <div class="col-sm">
    <% if @visits.length != 0 %>
      <div class="card">
        <div class="card-header">
          Visits
        </div>
        <table class="table table-striped table-responsive">
          <thead>
            <tr>
              <th>Date</th>
              <th>Reason for Visit</th>
              <th>Clinician</th>
            </tr>
          </thead>
          <% @visits.each do |v| %>
            <% @doctor = Clinician.where(id: v.clinician_id)[0] %>
            <tr style="cursor:pointer;" onclick=<%= "location.href='/visits/" + "#{v.id}'" %>>
              <td><%= v.created_at.strftime("%d %B %Y") %></td>
              <td><%= v.primary_reason %></td>
              <td><%= link_to "#{@doctor.first_name} #{@doctor.last_name}", clinician_path(@doctor.id) %></td>
            </tr>
          <% end %>
        </table>
      </div>
    <% else %>
      <div class="card">
        <div class="card-header">
          Visits
        </div>
        <div class="card-block">
          <h5>Patient does not have any Visits yet.</h5>
        </div>
      </div>
    <% end %>
  </div>
</div>
<br />
<div class="row">
  <div class="col-sm">
    <%= render "family_members/show_table", display_location: "patient_show", family_members: family_members %>
  </div>
</div>
<br />
<div class="row">
  <div class="col-sm">
    <%= render "procedures/show_table", display_location: "patient_show", procedures: procedures %>
  </div>
</div>
<br />
<div class="row">
  <div class="col-sm">
    <%= render "hospitalizations/show_table", display_location: "patient_show", hospitalizations: hospitalizations %>
  </div>
</div>
<br />
<div class="row">
  <div class="col-sm">
    <%= render "tests/show_table", tests: tests, display_location: "patient_show" %>
  </div>
</div>
<br />
<div class="row">
  <div class="col-sm">
    <%= render "diagnoses/show_table", diagnoses: diagnoses, display_location: "patient_show" %>
  </div>
</div>
