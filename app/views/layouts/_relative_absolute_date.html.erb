<div class="col-sm-6">
  <div class="form-inline">
    <div class="form-group" aria-describedby="relativeTime">
      <%= fff.number_field :time_ago, class: "form-control", step: 1, in: 1..99 %>
      <%= fff.select :time_ago_scale, TIME_SCALES, {include_blank: true}, {class: "form-control"} %>
    </div>
    <p id="relativeTime" class="purple form-text text-muted">
      relative date, e.g. "5 months ago"
    </p>
  </div>
</div>

<div class="col-sm-6">
  <%= fff.date_field column_title, class: "form-control", aria: { describedby: "absoluteTime" } %>
  <p id="absoluteTime" class="purple form-text text-muted">
    absolute date, e.g. "01/07/2016"
  </p>
</div>
