    <%= stylesheet_link_tag fingerprinted_asset('application'), media: 'all', skip_pipeline: true %>
    <%= javascript_include_tag fingerprinted_asset('application') %>

    <link rel="import" href="/javascripts/myscript-math-web/myscript-math-web.html" />
