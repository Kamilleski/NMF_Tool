    <%= csrf_meta_tags %>

    <title>Marfan Foundation Registry</title>

  </head>

  <body>
  <nav class="navbar navbar-toggleable-sm navbar-light bg-faded">
    <a class="navbar-brand" href="/">
      <img alt="â™¥" src="https://s-media-cache-ak0.pinimg.com/236x/21/81/31/21813173e73abfbd07a0f83419a7093c.jpg" width="30" class="d-inline-block align-middle">
    </a>
    <%= yield :navbar %>
  </nav>
  <% if params[:controller] == 'visits' %>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <%= value %>
      </div>
    <% end %>
    <%= yield %>
    <script type="text/javascript">
    $('button#floppy').click(function(){
      $('form.edit_visit')[0].submit()
    });
    </script>
  <% else %>
    <div class="container container-fluid">
      <br />
      <div class="row">
        <div class="col col-sm-12 col-centered">
          <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>">
              <%= value %>
            </div>
          <% end %>
        </div>
      </div>

      <%= yield %>

    </div>
  <% end %>
  </body>
</html>
