<div class="btn-group" role="group">
  <%= link_to edit_diagnosis_path(d), method: :get, class: "btn btn-light btn-sm" do %>
    <i class="fa fa-pencil"></i>
  <% end %>
  <%= link_to diagnosis_path(id: d.id), method: :delete, class: "btn btn-light btn-sm", data: { confirm: "Are you sure you want to delete diagnosis #{d.id} for #{d.topic.name} from record of #{d.patient.full_name}?"} do %>
    <i class="fa fa-trash"></i>
  <% end %>
</div>
