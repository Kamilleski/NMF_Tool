<div class="hidden-sm hidden-xs btn-group btn-group-sm hidden-sm-down" role="group">
  <%= link_to diagnosis_path(id: d.id), type: "button", method: :get, class: "btn btn-secondary" do %>
    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
  <% end %>
  <%= link_to edit_diagnosis_path(id: d.id), type: "button", method: :get, class: "btn btn-secondary" do %>
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
  <% end %>
  <%= link_to diagnosis_path(id: d.id), method: :delete, type: "button", class: "btn btn-secondary" do %>
    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
  <% end %>
</div>
<div class="hidden-md hidden-lg hidden-xlg btn-group btn-group-sm" role="group">
  <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Actions
  </button>
  <ul class="dropdown-menu">
    <li><%= link_to "View Details", diagnosis_path(id: d.id), method: :get %></li>
    <li><%= link_to "Edit", edit_diagnosis_path(id: d.id), method: :get %></li>
    <li><%= link_to "Destroy", diagnosis_path(id: d.id), method: :delete %></li>
  </ul>
</div>
