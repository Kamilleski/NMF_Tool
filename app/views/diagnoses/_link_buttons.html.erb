<div class="btn-group btn-group-sm" role="group">
  <%= link_to diagnosis_path(id: d.id), type: "button", method: :get, class: "btn btn-secondary btn-sm" do %>
    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
  <% end %>
  <%= link_to edit_diagnosis_path(id: d.id), type: "button", method: :get, class: "btn btn-secondary btn-sm" do %>
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
  <% end %>
  <%= link_to diagnosis_path(id: d.id), method: :delete, type: "button", class: "btn btn-secondary btn-sm" do %>
    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
  <% end %>
</div>
