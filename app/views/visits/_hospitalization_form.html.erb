<div class="form-group col-xs-8 control-label">
  <%= f.fields_for :hospitalization do |ff| %>
    <div class="col-xs-7">
      <%= ff.label "When was your recent hospitalization?", class: "control-label" %><br />
      <%= ff.date_field :admission_date, autofocus: true, class: "form-control" %><br />
    </div>

    <div class="col-xs-7">
      <%= ff.label "How many days were you in the hospital?", class: "control-label" %><br />
      <%= ff.number_field :length_of_stay, autofocus: true, class: "form-control" %><br />
    </div>

    <div class="col-xs-7">
      <%= ff.label "What type of hospitalization was it? (e.g. Emergency, Surgery, Psychiatric)", class: "control-label" %><br />
      <%= ff.text_field :type, autofocus: true, class: "form-control" %><br />
    </div>

    <div class="col-xs-7">
      <%= ff.label "Where were you hospitalized?", class: "control-label" %><br />
      <%= ff.text_field :location, autofocus: true, class: "form-control" %><br />
    </div>

    <div class="col-xs-7">
      <%= ff.label "Anything else to add?", class: "control-label" %><br />
      <%= ff.text_area :description, autofocus: true, class: "form-control" %><br />
    </div>

  <% end %>

</div>
