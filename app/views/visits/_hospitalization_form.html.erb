<%= f.fields_for :hospitalizations do |ff| %>

<div class="row">
  <div class="form-group">
    <br />
    <div class="col-xs-11 col-md-4 col-centered">
      <div class="row">
        <div class="col-xs-11 col-md-7">
          <%= ff.label "When was your recent hospitalization?", class: "control-label" %><br />
          <%= ff.date_field :admission_date, autofocus: true, class: "form-control" %>
        </div>
        <div class="col-xs-11 col-md-5">
          <%= ff.label "And for how many days?", class: "control-label" %><br />
          <%= ff.number_field :length_of_stay, autofocus: true, class: "form-control" %>
        </div>
      </div>
    </div>
    <br />
    <div class="col-xs-11 col-md-4 col-centered">
      <%= ff.label "What type of hospitalization was it?", class: "control-label" %><br />
      <%= ff.text_field :hosp_type, autofocus: true, class: "form-control", placeholder: "ex: Emergency, Surgical" %>
    </div>
    <br />
    <div class="col-xs-11 col-md-4 col-centered">
      <%= ff.label "Where were you hospitalized?", class: "control-label" %><br />
      <%= ff.text_field :location, autofocus: true, class: "form-control", placeholder: "ex: San Francisco General Hospital" %>
    </div>
    <br />
    <div class="col-xs-11 col-md-4 col-centered">
      <%= ff.label "Anything else to add?", class: "control-label" %><br />
      <%= ff.text_area :description, autofocus: true, class: "form-control" %>
    </div>
    <br />
    <div class="col-xs-11 col-md-4 col-centered">
      <button class="show_button btn btn-primary" type="button" onclick="renderHospitalization('#add-another')">Add another hospitalization?</button>
    </div>

  </div>
</div>

<% end %>

<div id="add-another"></div>
