<script>
  let allTopics = <%= @sorted_topics.html_safe %>
  let unsortedTopics = <%= @topics.html_safe %>
  let visit = <%= @jvisit.html_safe %>
  let concerns = <%= @jconcerns.html_safe %>
  let patient = <%= @jpatient.html_safe %>
</script>

<% content_for :navbar do %>
  <ul class="navbar-nav mr-auto">
    <li class="nav-item" title="history for <%= "#{@patient.last_name}, #{@patient.first_name}" %>">
      <a class="nav-link" href="/patients/<%= @patient.id %>">
        <%= "#{@patient.last_name}, #{@patient.first_name} (MRN: #{@patient.id})" %>
      </a>
    </li>
    <li class="nav-item" title="born <%= @patient.date_of_birth.strftime('%d %B %Y') %>">
      <a class="nav-link disabled" href="#">
        <%= @patient.age %>
      </a>
    </li>
    <li class="nav-item" title="<%= @patient.primary_diagnosis %>">
      <a class="nav-link disabled" href="#">
        <% if @patient.primary_diagnosis %>
          <%= @patient.primary_diagnosis %>
        <% else %>
          undiagnosed
        <% end %>
      </a>
    </li>
    <% if @visit.primary_reason %>
      <li class="nav-item" title="<%= @visit.primary_reason %>">
        <a class="nav-link disabled" href="#">
          for <%= @visit.primary_reason %>
        </a>
      </li>
    <% end %>
    <% if @visit.vitals.length != 0 %>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="vitalNavbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Vitals
        </a>
        <ul class="dropdown-menu" aria-labelledby="vitalNavbarDropdownMenuLink">
          <% @visit.vitals.each do |v| %>
            <li class="dropdown-item">
              <%= v.abbreviated %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </li>
    <% if @visit.heart_measurements.length > 0 %>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="heartNavbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Imaging
        </a>
        <ul class="dropdown-menu" aria-labelledby="heartNavbarDropdownMenuLink">
          <% @visit.heart_measurements.each do |m| %>
            <li class="dropdown-item">
              <%= m.abbreviated %>
            </li>
          <% end %>
        </ul>
      </li>
    <% end %>
  </ul>
  <ul class="nav navbar-nav ml-auto justify-content-end">
    <li class="nav-item" title="save and update visit">
      <button class="nav-icon" id="floppy" type="submit">
        <i class="fa fa-floppy-o" aria-hidden="true"></i>
      </button>
    </li>
    <li class="nav-item" title="generate after-visit letter">
      <button class="nav-icon" type="button" data-toggle="modal" data-target="#reportModal">
        <i class="fa fa-file-text-o" aria-hidden="true"></i>
      </button>
    </li>
  </ul>
<% end %>
<div class="modal fade" id="reportModal" tabindex="-1" role="dialog" aria-labelledby="reportModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="reportModalLabel">
          After-visit Letter
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <textarea class="form-control" style="min-height:50em;">
          <%= @visit.report %>
        </textarea>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
      </div>
    </div>
  </div>
</div>
<div id="ms" data-mskey="<%= ENV['MYSCRIPT_KEY'] %>" data-mshmac="<%= ENV['MYSCRIPT_HMAC'] %>"></div>
<div id="invisible" data-rubyvar="<%= @all_meds.map{|t| [t.name.downcase, t.id]}.to_h.to_json %>"></div>
<%= form_for @visit, class: "visit_form", id: 'visit_form' do |f| %>
  <div class="row">
    <div class="col-sm-12">
      <%= f.fields_for :patient do |ff| %>
        <div id="diagnosisHeader"></div>
      <% end %>
      <div id="reasonsForVisitHeader"
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12" style="margin-bottom:-16px;">
      <%= render 'visits/show_accordion',
        f: f,
        family_members: FamilyMember.where(visit_id: @visit.id),
        vitals: Vital.where(visit_id: @visit.id),
        medications: Medication.where(visit_id: @visit.id),
        imagery: @imagery,
        tests: @tests,
        hospitalizations: Hospitalization.where(visit_id: @visit.id),
        diagnoses: Diagnosis.where(visit_id: @visit.id),
        procedures: Procedure.where(visit_id: @visit.id)
      %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <div id="nestedListHook"></div>
    </div>
  </div>
<% end %>
<script>
  <%= render 'edit.js' %>
</script>
