<% content_for :navbar do %>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <a class="nav-item nav-link red" href="/patients">
        New Visit
      </a>
    </ul>
  </div>
<% end %>
<div class="card">
  <h1 class="card-header">All visits</h1>
  <table class="table table-sm table-striped table-responsive">
    <thead>
      <th>
        Date
      </th>
      <th>
        Patient
      </th>
      <th>
        Actions
      </th>
    </thead>
    <% @visits.each do |visit| %>
      <tr>
        <td>
          <%= visit.created_at.strftime("%d %B %Y") %>
        </td>
        <td>
          <%= link_to "Patient Information", patient_path(visit.patient_id) %>
        </td>
        <td>
          <div class="btn-group" role="group">
            <%= button_to "Edit Visit", edit_visit_path(id: visit.id), method: :get, class: "btn btn-secondary" %>
            <%= button_to "Visit Letter", report_visit_path(id: visit.id), method: :get, class: "btn btn-secondary" %>
            <%= button_to "Delete Records", visit_path(visit.id), method: :delete, class: "btn btn-secondary", data: { confirm: "Are you sure you want to delete this visit and all associated records?" } %>
          </div>
        </td>
      </tr>
    <% end %>
  </table>
</div>
