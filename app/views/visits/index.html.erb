<br />
<div class="row">
  <div class="col-xs-10 col-centered">
    <div class="panel panel-default">
      <div class="panel-heading"><h1>All visits</h1></div>
      <table class="table table-striped table-hover">
        <tr>
          <th data-sortable="true">Date</th>
          <th data-sortable="true">Patient</th>
          <th>Actions</th>
          <th>After-visit summary</th>
        </tr>
        <% @visits.each do |visit| %>
        <tr>
          <td><%= visit.created_at.strftime("%d %B %Y") %></td>
          <td><%= link_to "#{visit.patient.last_name}, #{visit.patient.first_name}", patient_path(visit.patient_id) %></td>
          <td><%= link_to "Edit Visit", edit_visit_path(visit.id) %> /
          <%= link_to "Delete Visit", visit, method: :delete, data: { confirm: "Are you sure?" } %></td>
          <td><%= link_to "View Details", visit_path(visit.id) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
