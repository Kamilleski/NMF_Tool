<% content_for :navbar do %>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <a class="nav-item nav-link red" href="/patients">
        New Visit
      </a>
    </ul>
  </div>
<% end %>
<div class="card">
  <div class="card-header"><h1>All visits</h1></div>
  <table class="table table-striped table-responsive">
    <tr>
      <th data-sortable="true">Date</th>
      <th data-sortable="true">Patient</th>
      <th>Actions</th>
    </tr>
    <% @visits.each do |visit| %>
    <tr>
      <td><%= visit.created_at.strftime("%d %B %Y") %></td>
      <td><%= link_to "Patient Information", patient_path(visit.patient_id) %></td>
      <td>
        <div class="btn-group" role="group">
          <%= button_to "Edit Visit", edit_visit_path(id: visit.id), type: "button", method: :get, class: "btn btn-info" %>
          <%= button_to "Visit Summary", visit_path(id: visit.id), type: "button", method: :get, class: "btn btn-primary" %>
          <%= button_to "Visit Letter", report_visit_path(id: visit.id), type: "button", method: :get, class: "btn btn-secondary" %>
        </div>
      </td>
    </tr>
    <% end %>
  </table>
</div>
