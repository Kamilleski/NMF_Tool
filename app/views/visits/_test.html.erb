<%= f.fields_for :tests do |ff| %>

<div class="row">
  <div class="form-group">
    <div class="col-xs-11 col-md-4 col-centered">
      <div class="row">
        <div class="col-xs-11 col-md-7">
          <%= ff.label "What type of test was it?", class: "control-label" %><br />
          <%= ff.text_field :test_type, autofocus: true, class: "form-control", placeholder: "ex: Echocardiogram, Blood test" %>
        </div>
        <div class="col-xs-11 col-md-5">
          <%= ff.label "And when was the test?", class: "control-label" %><br />
          <%= ff.date_field :test_date, autofocus: true, class: "form-control" %>
        </div>
      </div>
    </div>
    <br />
    <div class="col-xs-11 col-md-4 col-centered">
      <%= ff.label "What were the results of the test?", class: "control-label" %><br />
      <%= ff.text_area :result, autofocus: true, class: "form-control" %>
    </div>
    <br />
    <div class="col-xs-11 col-md-4 col-centered">
      <br />
      <button class="show_button btn btn-primary" type="button" onclick="renderTest('#add-another')">Add another test?</button>
    </div>
  </div>
</div>

<% end %>

<div id="add-another"></div>
