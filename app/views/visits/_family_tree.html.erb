
<div class="container">
  <br />
  <div class="row" id="self">
    <div class="col-xs-2 col-xs-offset-2">
      <%= render 'family_member_card', x: @siblings[0], y: "Sibling 1", z: "siblingOne" %>
    </div>
    <div class="col-xs-2 col-xs-offset-1">
      <div class="card card-block">
        <h4 class="card-title">Self</h4>
        <p class="card-text">
          <%= "#{@patient.first_name} #{@patient.last_name}" %>
        </p>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" style="display: block; margin: 0 auto;">Self</button>
      </div>
    </div>
    <div class="col-xs-2 col-xs-offset-1">
      <%= render 'family_member_card', x: @siblings[1], y: "Sibling 2", z: "siblingTwo" %>
    </div>
  </div>
  <br />
  <br />
  <div class="row" id="parents">
    <div class="col-xs">
      <div class="col-xs-2 col-xs-offset-2">
          <%= render 'family_member_card', x: @mother, y: "Mother", z: "mother" %>
        </div>
      </div>
      <div class="col-xs-2 col-xs-offset-4">
          <%= render 'family_member_card', x: @father, y: "Father", z: "father" %>
      </div>
    </div>
  </div>
  <br />
  <br />
  <div class="row" id="grandparents">
    <div class="col-xs-12 col-centered">
      <div class="col-xs-3">
        <%= render 'family_member_card', x: @maternal_grandmother, y: "Maternal Grandmother", z: "maternalGrandmother" %>
      </div>
      <div class="col-xs-3">
        <%= render 'family_member_card', x: @maternal_grandfather, y: "Maternal Grandfather", z: "maternalGrandfather" %>
      </div>
      <div class="col-xs-3">
        <%= render 'family_member_card', x: @paternal_grandmother, y: "Paternal Grandmother", z: "paternalGrandmother" %>
      </div>
      <div class="col-xs-3">
        <%= render 'family_member_card', x: @paternal_grandfather, y: "Paternal Grandfather", z: "paternalGrandfather" %>
      </div>
    </div>
  </div>
</div>


<div class="modal fade" id="motherModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <%= render 'family_tree_modal', f: f, relationship: 'Mother' %>
</div>

<div class="modal fade" id="fatherModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <%= render 'family_tree_modal', f: f, relationship: 'Father' %>
</div>

<div class="modal fade" id="maternalGrandmotherModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <%= render 'family_tree_modal', f: f, relationship: 'Maternal Grandmother' %>
</div>

<div class="modal fade" id="maternalGrandfatherModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <%= render 'family_tree_modal', f: f, relationship: 'Maternal Grandfather' %>
</div>

<div class="modal fade" id="paternalGrandmotherModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <%= render 'family_tree_modal', f: f, relationship: 'Paternal Grandmother' %>
</div>

<div class="modal fade" id="paternalGrandfatherModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <%= render 'family_tree_modal', f: f, relationship: 'Paternal Grandfather' %>
</div>
