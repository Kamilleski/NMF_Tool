<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Latest Heart Imagery:</h3>
  </div>
  <% if @imagery.length != 0 %>
    <table class="table table-striped table-hover">
      <tr>
        <th>Topic ID</th>
        <th>Date</th>
        <th>Type</th>
        <th>Result</th>
      </tr>
      <% @imagery.each do |t| %>
        <tr>
          <td><%= link_to "#{t.topic_id}", topic_path(t.topic_id) %></td>
          <td><%= t.test_date ? t.test_date.strftime("%d %B %Y") : "not noted "%></td>
          <td><%= find_trail(Topic.where(id: t.topic_id)[0]) %></td>
          <td><%= print_if_present(t.result) %></td>
        </tr>
      <% end %>
    </table>
  <% else %>
    <div class="panel-body">
      Patient did not discuss any recent tests during this visit.
    </div>
  <% end %>
</div>
