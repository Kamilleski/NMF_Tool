<div class="card">
  <div class="card-header">
    Latest Heart Imagery:
  </div>
  <% if imagery.length != 0 %>
    <table class="table table-striped table-responsive">
      <tr>
        <th>Topic ID</th>
        <th>Date</th>
        <th>Type</th>
        <th>Result</th>
        <th>Edit</th>
      </tr>
      <% imagery.each do |t| %>
        <tr>
          <td><%= link_to "#{t.topic_id}", topic_path(t.topic_id) %></td>
          <td><%= t.test_date ? t.test_date.strftime("%d %B %Y") : "not noted "%></td>
          <td><%= find_pretty_trail(Topic.find(t.topic_id)) %></td>
          <td><%= "#{print_if_present(t.result)} #{Topic.find(t.topic_id).units_of_measurement} " %></td>
          <td>
            <%= link_to edit_test_path(t.id), class: 'btn btn-secondary btn-sm' do %>
            <span class='glyphicon glyphicon-pencil' aria-hidden='true'></span>
          <% end %>
        </td>
        </tr>
      <% end %>
    </table>
  <% else %>
    <div class="card-block">
      Patient did not discuss any recent tests during this visit.
    </div>
  <% end %>
</div>
