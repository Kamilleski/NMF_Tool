<div class="card">
  <div class="card-header">
    Latest Heart Imagery:
  </div>
  <% if imagery.length != 0 %>
    <table class="table table-striped table-responsive">
      <thead>
        <tr>
          <th>Type</th>
          <th>Date</th>
          <th>Name</th>
          <th>Result</th>
          <th>Actions</th>
        </tr>
      </thead>
      <% imagery.each do |t| %>
        <tr>
          <th><%= link_to "#{t.topic_id}", topic_path(t.topic_id) %></th>
          <td><%= t.test_date ? t.test_date.strftime("%b %Y") : "not noted "%></td>
          <td><%= find_pretty_trail(Topic.find(t.topic_id)) %></td>
          <td><%= "#{print_if_present(t.result)} #{Topic.find(t.topic_id).units_of_measurement} " %></td>
          <td>
            <%= render 'tests/link_buttons', t: t %>
          </td>
        </tr>
      <% end %>
    </table>
  <% else %>
    <div class="card-block">
      Patient did not discuss any recent tests during this visit.
    </div>
  <% end %>
</div>
