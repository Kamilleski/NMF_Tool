<div id="medsAccordion" role="tablist" aria-multiselectable="true">
  <div class="card">
    <div class="card-header" role="tab" id="medsHeading">
      <a data-toggle="collapse" data-parent="#medsAccordion" href="#medsCollapse" aria-expanded="true" aria-controls="medsCollapse" style="none">
      Medications <i class="fa fa-caret-down"></i>
      </a>
    </div>
    <div id="medsCollapse" class="collapse show" role="tabpanel" aria-labelledby="medsHeading">
      <% if medications.length != 0 %>
        <table class="table table-striped table-responsive">
          <thead>
            <tr>
              <!-- <th>Type</th> -->
              <th>Date</th>
              <th>Name</th>
              <th>Dose</th>
              <th>Form</th>
              <th>MOI</th>
              <th>Frequency</th>
              <th>Measurement</th>
              <th>Note</th>
            </tr>
          </thead>
          <% medications.each do |m| %>
            <tr>
              <!-- <th><%= link_to "#{m.topic_id}", topic_path(m.topic_id) %></th> -->
              <td><%= m.created_at.strftime("%b %Y") %></td>
              <td><%= "#{m.topic.name} (#{m.common_name})" %></td>
              <td><%= "#{m.dose} #{m.dose_unit_of_measurement}" %></td>
              <td><%= m.dosage_form %></td>
              <td><%= m.ingestion_method %></td>
              <td><%= "#{m.frequency} #{m.frequency_scale}" %></td>
              <td><%= m.ingestion_method %></td>
            </tr>
          <% end %>
        </table>
      <% else %>
        Patient does not have any meds on file yet. <%= link_to "Add Some", new_medication_path(@patient), class: "" %>
      <% end %>
    </div>
  </div>
</div>
