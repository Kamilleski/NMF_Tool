<div class="card">
  <div class="card-header">
    Procedures
  </div>
  <% if procedures.length != 0 %>
    <table class="table table-striped table-responsive">
      <tr>
        <th>Date</th>
        <th>Type</th>
        <th>Note</th>
        <th>Edit</th>
      </tr>
      <% procedures.each do |p| %>
        <tr>
          <td><%= display_date(p) %></td>
          <td><%= find_trail(Topic.where(id: p.topic_id)[0]) %></td>
          <td><%= print_if_present(p.note) %></td>
          <td>
            <%= link_to edit_procedure_path(p.id), class: 'btn btn-secondary btn-sm' do %>
              <span class='glyphicon glyphicon-pencil' aria-hidden='true'></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  <% else %>
    <div class="card-block">
      Patient has not reported any procedures.
    </div>
  <% end %>
</div>
