<% unless fm.nil? %>
  <% topic = Topic.find(fm.topic_id) %>
  <% @fpdh = fm.future_patient_data_hash %>
  <div class="card card-block">
    <h4 class="card-title"><%= topic.name %></h4>
    <p class="card-text">
    <% action = "update" %>
    Name: <%= @fpdh['first_name'].blank? ? "not noted" : @fpdh['first_name'] %>
    <br />
    <% if !@fpdh['deceased'] %>
      <% @age = ((Date.today - @fpdh['date_of_bitopich'].to_i)/365.25).floor %>
      Age: <%= @age ? "#{@age} years" : "not noted" %> (living)
      <br />
    <% else %>
      (deceased)
      <br />
      Cause of death: <%= @fpdh['cause_of_death'].blank? ? "not noted" : @fpdh['cause_of_death']  %>
      <br />
    <% end %>
      Notes: <%= @fpdh['note'].blank? ? "none" : @fpdh['note'] %>
      <br />
      <hr />
    </p>
    <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#<%= topic.name -%>Modal" style="display: block; margin: 0 auto;" id=<%= topic.name %>>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      <%= "#{action.capitalize} #{topic.name}" %>
    </button>
  </div>
<% end %>
