<div class="container">
  <form>  
    <div class="form-group row">
      <label for="gen_-1" class="col-sm-2 col-form-label">
        <h4>Generation -1
          <small>Patient's biological mother and father</small>
        </h4>
      </label>
      <div class="col-sm-10">
        <div class="row">
          <% @parents.each do |parent| %>
            <div class="col-sm-4">
              <%= render 'family_members/family_member_card', fm: parent, title: "parent", f: f %>
            </div>
          <% end %>
          <div class="col-sm-4">
            <%= render 'family_members/plus_button', title: "parent", f: f %>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group row">
      <label for="gen_0" class="col-sm-2 col-form-label h4">
        <h4>Generation 0
          <small>Patient's biological brothers and sisters</small>
        </h4>
      </label>
      <div class="col-sm-10">
        <div class="row">
          <% @siblings.each do |sibling| %>
            <div class="col-sm-4">
              <%= render 'family_members/family_member_card', fm: sibling, title: "sibling", f: f %>
            </div>
          <% end %>
          <div class="col-sm-4">
            <%= render 'family_members/plus_button', title: "sibling", f: f %>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group row">
      <label for="gen_1" class="col-sm-2 col-form-label h4">
        <h4>Generation +1
          <small>Patient's biological children</small>
        </h4>
      </label>
      <div class="col-sm-10">
        <div class="row">
          <% @children.each do |child| %>
            <div class="col-sm-4">
              <%= render 'family_members/family_member_card', fm: child, title: "child", f: f %>
            </div>
          <% end %>
          <div class="col-sm-4">
            <%= render 'family_members/plus_button', title: "child", f: f %>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>
