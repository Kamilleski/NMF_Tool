<div class="btn-group" role="group">
  <%= link_to edit_family_member_path(id: fm.id), method: :get, class: "btn btn-secondary btn-sm" do %>
    <i class="fa fa-pencil"></i>
  <% end %>
  <%= link_to family_member_path(id: fm.id), method: :delete, class: "btn btn-secondary btn-sm", data: { confirm: "Are you sure you want to delete record of #{fm.topic.name} #{fm.id} from record of #{fm.patient.full_name}?"} do %>
    <i class="fa fa-trash"></i>
  <% end %>
</div>
