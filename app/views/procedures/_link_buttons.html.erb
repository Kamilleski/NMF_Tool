<div class="btn-group" role="group">
  <%= link_to edit_procedure_path(p.id), method: :get, class: "btn btn-light btn-sm" do %>
    <i class="fa fa-pencil"></i>
  <% end %>
  <%= link_to procedure_path(p.id), method: :delete, class: "btn btn-light btn-sm", data: { confirm: "Are you sure you want to delete procedure #{p.id} for #{p.topic.name} from record of #{p.patient.full_name}?"} do %>
    <i class="fa fa-trash"></i>
  <% end %>
</div>
