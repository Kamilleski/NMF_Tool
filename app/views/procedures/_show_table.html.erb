<div class="card">
  <div class="card-header">
    Procedures
  </div>
  <% if procedures.length != 0 %>
    <table class="table table-striped table-responsive">
      <thead>
        <tr>
          <th>Date</th>
          <th>Name</th>
          <th>Note</th>
          <th>Attachments</th>
          <th>Actions</th>
        </tr>
      </thead>
      <% procedures.each do |p| %>
        <tr>
          <td><%= display_date(p) %></td>
          <td><%= find_trail(Topic.where(id: p.topic_id)[0]) %></td>
          <td><%= print_if_present(p.note) %></td>
          <td><%= render 'layouts/attachment_thumbnails', model: p %></td>
          <td>
            <%= render 'procedures/link_buttons', p: p %>
          </td>
        </tr>
      <% end %>
    </table>
  <% else %>
    <div class="card-block">
      Patient has not reported any procedures.
    </div>
  <% end %>
</div>
