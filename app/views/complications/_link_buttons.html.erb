<div class="btn-group btn-group-sm" role="group">
  <%= link_to complication_path(id: c.id), type: "button", method: :get, class: "btn btn-secondary btn-sm" do %>
    <i class="fa fa-search"></i>
  <% end %>
  <%= link_to edit_complication_path(id: c.id), type: "button", method: :get, class: "btn btn-secondary btn-sm" do %>
    <i class="fa fa-pencil"></i>
  <% end %>
  <%= link_to complication_path(id: c.id), method: :delete, type: "button", class: "btn btn-secondary btn-sm" do %>
    <i class="fa fa-trash"></i>
  <% end %>
</div>
