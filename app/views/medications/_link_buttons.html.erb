<div class="btn-group" role="group">
  <%= link_to edit_medication_path(m.id), method: :get, class: "btn btn-secondary btn-sm" do %>
    <i class="fa fa-pencil"></i>
  <% end %>
  <%= link_to medication_path(m.id), method: :delete, class: "btn btn-secondary btn-sm", data: { confirm: "Are you sure you want to delete medication #{m.id} for #{m.topic.name} from record of #{m.patient.full_name}"} do %>
    <i class="fa fa-trash"></i>
  <% end %>
</div>
