<%= render 'layouts/form_header', concern: concern, f: f %>

<div class="form-group row">
  <%= f.label :name, class: "col-3 col-form-label" %>
  <div class="col-9">
    <%= f.text_field :name %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :common_name, class: "col-3 col-form-label" %>
  <div class="col-9">
    <%= f.text_field :common_name %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :current, class: "col-3 col-form-label" %>
  <div class="col-9">
    <%= f.text_field :current %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :dose, class: "col-3 col-form-label" %>
  <div class="col-4">
    <%= f.number_field :dose %>
  </div>
  <div class="col-5">
    <%= f.text_field :dose_unit_of_measurement %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :dosage_form, class: "col-3 col-form-label" %>
  <div class="col-4">
    <%= f.number_field :dosage_form %>
  </div>
  <div class="col-5">
    <%= f.text_field :dosage_form_units %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :medication_format, class: "col-3 col-form-label" %>
  <div class="col-9">
    <%= f.number_field :medication_format %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :nested_med_category, "Category", class: "col-3 col-form-label" %>
  <div class="col-9">
    <%= f.text_field :nested_med_category %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :duration_amount, "Duration", class: "col-3 col-form-label" %>
  <div class="col-4">
    <%= f.number_field :duration_amount %>
  </div>
  <div class="col-5">
    <%= f.text_field :duration_scale %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :ingestion_method, class: "col-3 col-form-label" %>
  <div class="col-9">
    <%= f.text_field :ingestion_method %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :frequency, class: "col-3 col-form-label" %>
  <div class="col-4">
    <%= f.number_field :frequency %>
  </div>
  <div class="col-5">
    <%= f.text_field :frequency_scale %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :time_ago %>
  <div class="col-4">
    <%= f.number_field :time_ago, class: "col-3 col-form-label" %>
  </div>
  <div class="col-5">
    <%= f.text_field :time_ago_scale %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :absolute_start_date, class: "col-3 col-form-label" %>
  <div class="col-9">
    <%= f.date_field :absolute_start_date %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :note, class: "col-3 col-form-label" %>
  <div class="col-9">
    <%= f.text_field :note %>
  </div>
</div>

<%= render 'layouts/attachment_field', concern: concern, f: f %>
